<div class="flex items-center justify-center px-6 my-16">
	<!-- Row -->
	<div class="w-full xl:w-3/4 lg:w-11/12 flex">
		<!-- Col -->
		<div class="w-full h-auto bg-purple-500 pt-20 hidden lg:block lg:w-5/12 bg-cover rounded-l-lg" >
			<div class="flex m-5 items-center justify-center ">
				<img class="img-fluid lg:w-full flex rounded-xl content-center" src="/img/dcto.png" >
			</div>
		</div>
		<!-- Col -->
		<div class="w-full lg:w-7/12 bg-white p-1 rounded-lg lg:rounded-l-none">
			<h3 class="pt-4 text-2xl text-center">CREAR PROMOCION</h3>

				<!-- component -->
				<div class="flex items-center justify-center p-12">
				<!-- Author: FormBold Team -->
				<!-- Learn More: https://formbold.com -->
				<div class="mx-auto w-full max-w-[550px]">
					<form action="/deals/create" method="POST">
						<div class="mb-3">
							<label
							for="name"
							class="mb-1 block text-base font-medium text-[#07074D]"
							>
							Nombre de la promocion
							</label>
							<input
							type="text"
							name="name"
							id="name"
							class="w-full rounded-md border border-[#e0e0e0] bg-white py-2 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
							/>
						</div>

						<div class="mb-0">
							<label class="mb-1 block text-base font-medium text-[#07074D]">
								Fecha de inicio
							</label>
						</div>
						<div class="mb-0 md:flex md:justify-between">
							<div class="mb-4 md:mr-2 md:mb-0">
								<input
									class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded appearance-none focus:outline-none focus:shadow-outline"
									id="aIni"
									name="aIni"
									placeholder="Año"
								/>
							</div>
							<div class="md:ml-2">
								<input
									class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded appearance-none focus:outline-none focus:shadow-outline"
									id="mIni"
									name="mIni"
									placeholder="Mes"
								/>
							</div>
							<div class="md:ml-2">
								<input
									class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded  appearance-none focus:outline-none focus:shadow-outline"
									id="dIni"
									name="dIni"
									placeholder="Dia"
								/>
							</div>
						</div>

						<div class="mb-0">
							<label class="mb-1 block text-base font-medium text-[#07074D]">
								Fecha de fin
							</label>
						</div>
						<div class="mb-0 md:flex md:justify-between">
							<div class="mb-4 md:mr-2 md:mb-0">
								<input
									class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded appearance-none focus:outline-none focus:shadow-outline"
									id="aFin"
									name="aFin"
									placeholder="Año"
								/>
							</div>
							<div class="md:ml-2">
								<input
									class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded appearance-none focus:outline-none focus:shadow-outline"
									id="mFin"
									name="mFin"
									placeholder="Mes"
								/>
							</div>
							<div class="md:ml-2">
								<input
									class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded  appearance-none focus:outline-none focus:shadow-outline"
									id="dFin"
									name="dFin"
									placeholder="Dia"
								/>
							</div>
						</div>



						<div class="mb-3">
							<label
							for="dcto"
							class="mb-1 block text-base font-medium text-[#07074D]"
							>
							Descuento
							</label>
							<input
							type="number"
							name="dcto"
							id="dcto"
							class="w-full rounded-md border border-[#e0e0e0] bg-white py-2 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
							/>
						</div>

						<button
							class="w-full px-4 py-2 mb-2 font-bold text-white bg-green-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline"
							type="submit"
						>
							Crear promocion
						</button>
					
					
					</form>
				</div>
				</div>

		</div>
	</div>
</div>
