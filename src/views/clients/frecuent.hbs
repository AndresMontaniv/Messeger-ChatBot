<div class="flex items-center justify-center px-6 my-8">
	<!-- Row -->
	<div class="w-full xl:w-3/4 lg:w-11/12 flex">
		<!-- Col -->
		
		<div class="w-full h-auto bg-purple-500 hidden lg:block lg:w-5/12 bg-cover rounded-l-lg " >
		
			<div class="mx-15 mt-20 ">
				<label class="block mb-6 p-2 text-2xl  text-center font-bold text-white">
					PEDRO PICAPIEDRA
				</label>

				<div class="flex items-center justify-center">
					<img class="img-fluid lg:w-3/5 flex rounded-xl content-center" src="/img/default-profile.png " >
				</div>
				
			</div>

		</div>
		<!-- Col -->
		<div class="w-full lg:w-7/12 bg-white p-1 rounded-lg lg:rounded-l-none">
			<h3 class="pt-4 text-2xl text-center">CLIENTE RECURRENTE</h3>
			<form class="px-8 pt-3 pb-3 mb-1 bg-white rounded">
				

				<div class="mb-3">
					<label class="block mb-0 text-sm font-bold text-gray-700" for="facebook">
						Facebook
					</label>
					<a href="https://www.facebook.com/profile.php?id=100008061335713">
						<p class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
						id="facebook">
						https://www.facebook.com/profile.php?id=100008061335713
						</p>
					</a>
				</div>

				<div class="mb-3">
					<label class="block mb-0 text-sm font-bold text-gray-700" for="email">
						Email
					</label>
					<p class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
						id="email">
						correo@gmail.com
					</p>
				</div>

				<div class="mb-3">
					<label class="block mb-0 text-sm font-bold text-gray-700" for="celular">
						Celular
					</label>
					<p class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
						id="celular">
						78654321
					</p>
				</div>

				<div class="mb-3">
					<label class="block mb-0 text-sm font-bold text-gray-700" for="fecha">
						Ãšltimo contacto
					</label>
					<p class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
						id="fecha">
						10/10/2022
					</p>
				</div>

                <div class="mb-3">
					<label class="block mb-0 text-sm font-bold text-gray-700" for="frecuencia">
						Frecuencia de compra
					</label>
					<p class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
						id="frecuencia">
						6
					</p>
				</div>

                <div class="mb-3">
					<label class="block mb-0 text-sm font-bold text-gray-700" for="mPromedio">
						Monto promedio
					</label>
					<p class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
						id="mPromedio">
						100 Bs
					</p>
				</div>

			</form>
		</div>
	</div>
</div>

<div class="container ">
    <h3>Info</h3>
    <br>
    <p><b>id:</b> {{client.id}}</p>
    <p><b>name:</b> {{client.name}}</p>
    <p><b>profilePic:</b> {{client.profilePic}}</p>
    <p><b>facebookId:</b> {{client.facebookId}}</p>
    <p><b>email:</b> {{client.email}}</p>
    <p><b>phone:</b> {{client.phone}}</p>
    {{#if client.lastContact}}
    <p><b>ultimo contacto:</b> {{timeago client.lastContact}}</p>
    {{else}}
    <p><b>ultimo contacto:</b> No ha tenido contacto</p>
    {{/if}}
    <p><b>Frecuencia de compra:</b> {{client.numOrders}}</p>
    <p><b>Monto promedio:</b> {{client.avgTotal}}</p>
</div>